        <ul class="nav">
          {% for item in navigation %}
            {% if item.page == page %}
              {% set active = 'active' %}
            {% endif %}
            <li class="{{active}}"><a href="{{ item.href }}">{{ item.caption }}</a></li>
            {% set active = '' %}
          {% endfor %}
        </ul>
